<%= form_with scope: :user, url: users_path, local: true do |form| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@user.errors.count, "error") %> prohibited
        this article from being saved:
      </h2>
      <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <p>
    <p class="h6 font-weight-bold "><%= form.label :UserName %><br></p>
    <%= form.text_field :user_name%>
  </p>
  <p>
    <p class="h5 font-weight-bold"><%= form.label :Email %><br></p>
    <%= form.text_field :email, :value => "email"%>
  </p>

  <p>
    <p class="h5 font-weight-bold"><%= form.label :Password %><br></p>
    <%= form.text_field :password %>
  </p>
  <p>
    <p class="h6 font-weight-bold "><%= form.label :Admin %><br></p>
    <%= form.check_box :admin%>
  </p>
  <p>
    <p class="h6 font-weight-bold "><%= form.label :SuperAdmin %><br></p>
    <%= form.check_box :super_admin%>
  </p>
  <p>
    <%= form.submit %>
  </p>
<% end %>
